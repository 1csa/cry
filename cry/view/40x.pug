      html, body {
        height: 100%;
      }
      .container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        height: 100%;
      }
      .center-img {
        width: 500px;
      }
      .center-text {
        text-align: center;
      }
  body
    div.container
      img.center-img(src="https://si1.go2yd.com/get-image/0lc44M4XtD6")
